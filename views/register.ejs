<% if (typeof assetpath === 'undefined') { assetpath = '' } %>
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />

	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
  <meta name="viewport" content="width=device-width" />

  <!-- Bootstrap core CSS -->
  <link href="<%= assetpath %>assets/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Fonts -->
  <link href="<%= assetpath %>assets/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />

	<!-- Core Bootstrap -->
	<script src="<%= assetpath %>assets/js/bootstrap.min.js" type="text/javascript"></script>

  <!-- main.js -->
  <script src="<%= assetpath %>assets/js/main.js" type="text/javascript"></script>

  <!-- jQuery -->
  <script src="<%= assetpath %>assets/js/jquery.min.js" type="text/javascript"></script>

</head>
<body>
  <form id="registerForm">
    <div class="form-group">
        <input
              type="name"
              name="name"
              required="true"
              placeholder="Name.."
              class="form-control">
    </div>
    <div class="form-group">
        <input
              type="password"
              name="password"
              required="true"
              placeholder="Password.."
              class="form-control">
    </div>

    <button class="btn" onclick="postForm('#registerForm', '/register', '/login')">Register account</button>
  </form>
</body>
</html>
